{
  "name": "functional-ts",
  "type": "module",
  "version": "0.0.0",
  "description": "Project for exploring functional libraries in TypeScript",
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "git@github.com:tgillus/functional-ts.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "bun run clean && bun test && tsc",
    "clean": "del-cli lib coverage",
    "format": "biome format --fix --no-errors-on-unmatched .",
    "lint": "biome lint --no-errors-on-unmatched .",
    "lint:fix": "biome lint --fix --no-errors-on-unmatched .",
    "prepack": "bun run build",
    "prepare": "husky",
    "release": "release-it --ci",
    "test": "bun test",
    "test:cov": "bun test --coverage",
    "test:watch": "bun test --watch",
    "watch": "tsc -c"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@release-it/conventional-changelog": "10.0.1",
    "@types/bun": "1.3.0",
    "del-cli": "7.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "release-it": "19.0.5",
    "testdouble": "3.20.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@aws-lambda-powertools/metrics": "2.27.0",
    "htm": "3.1.1",
    "preact": "10.27.2",
    "preact-render-to-string": "6.6.2"
  }
}
